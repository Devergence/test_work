.slider
  width 100%
  height 780px
  position relative
  &__text
    &-wrapper
      position absolute
      left 0
      right 0
      top 36%
      bottom 0
      text-align center
    &-top
      font-family 'monseratt-bold'
      color #fff
      text-transform uppercase
      margin-bottom 11px
    &-center
      font-family 'monseratt-bold'
      color #fff
      font-size 60px
    &-bottom
      &_block
        font-family 'droid_serif'
        display block
        color #fff
        margin-bottom 8px
  &__icons
    display inline-block
    position relative

    &:before
      position absolute
      content ''
      background url("../images/left_line.png") center center no-repeat
      transform: translateY(-50%)
      top: 50%
      right 33px
      width: 111px
      height: 9px

    &:after
      position absolute
      content ''
      background url("../images/right_line.png") center center no-repeat
      transform: translateY(-50%)
      top: 50%
      left 33px
      width: 111px
      height: 9px


    &-center
      margin 15px auto


